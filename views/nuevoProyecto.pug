extends layout
block content
    .contenido-principal
        h1= nombrePagina
        if errores
            each e in errores
                .alerta= e.texto
        form.agregar-proyecto(action="/nuevo-proyecto" method="post")
            .campo
                label(for="nombre") Nombre del proyecto:
                input(type="text" id="nombre" name="nombre" placeholder="Nombre proyecto")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")